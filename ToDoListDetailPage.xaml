             x:Class="MyMauiApp.Views.ToDoListDetailPage"
             Title="Yapılacaklar Detay Sayfası">
    <VerticalStackLayout>
        <Label 
            Text="Görev"/>
        <Entry Placeholder="Lütfen yapılacak bir görev giriniz:"/>
